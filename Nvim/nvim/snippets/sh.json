{
  "Bash Header Doc Block": {
    "prefix": "doch",
    "body": [
      "# =========================================",
      "# .FILE",
      "#   ${1:filename.sh}",
      "#",
      "# .SYNOPSIS",
      "#   ${2:Overview of script}",
      "#",
      "# .DESCRIPTION",
      "#   ${3:Brief description of script}",
      "#",
      "# .PARAMETER ${4:parameter_name}",
      "#   ${5:Description of parameter}",
      "#",
      "# .INPUTS",
      "#   ${6:None}",
      "#",
      "# .OUTPUTS",
      "#   ${7:None or e.g., /tmp/output.log}",
      "#",
      "# .NOTES",
      "#   Version       : ${8:1.0}",
      "#   Author        : ${9:@ZouariOmar} ${10:<zouariomar20@gmail.com>}",
      "#   Created       : ${11:<YYYY-MM-DD>}",
      "#   Change Log    : ${12:Initial version}",
      "#",
      "# .EXAMPLE",
      "#   ${13:./script.sh --example 'value'}",
      "# ========================================="
    ],
    "description": "Bash Header Doc Block with metadata and parameter help"
  },
  "Bash Funcions Doc Block": {
    "prefix": "doc",
    "body": [
      "# -----------------------------------------",
      "# .FUNCTION",
      "#   ${1:Function name}",
      "# .SYNOPSIS",
      "#   ${2:Short description}",
      "# .DESCRIPTION",
      "#   ${3:More detailed explanation}",
      "# .AUTHOR",
      "#   ${4:@ZouariOmar} (${5:zouariomar20@gmail.com})",
      "# .CREATED",
      "#   ${6:<YYYY-MM-DD>}",
      "# -----------------------------------------"
    ],
    "description": "Bash Funcions Doc Block"
  },
  "help-function": {
    "prefix": "help",
    "body": [
      "help() {",
      "  echo -e \"\\${YELLOW}[FILE]\\${RESET}",
      "  ${1:your_script_name.sh}",
      "\\${YELLOW}[LINK]\\${RESET}",
      "  ${2:https://github.com/ZouariOmar}",
      "\\${YELLOW}[BRIEF]\\${RESET}",
      "  ${3:Brief description of what this script/function does}",
      "\\${YELLOW}[USAGE]\\${RESET}",
      "  ${4:Example usage or setup instructions}",
      "\\${YELLOW}[OPTIONS]\\${RESET}",
      "  ${5:--option1 <arg> -- Description of option1}",
      "  ${6:--option2       -- Description of option2}",
      "  ${7:--help | -h     -- Display this help message}",
      "\\${YELLOW}[VERSION]\\${RESET}",
      "  ${8:1.0}",
      "\\${YELLOW}[AUTHOR]\\${RESET}",
      "  ${9:@ZouariOmar <zouariomar20@gmail.com>}",
      "\\${YELLOW}[CREATED]\\${RESET}",
      "  ${10:DD/MM/YYYY}",
      "\\${YELLOW}[CHANGELOG]\\${RESET}",
      "  ${11:Initial version}\"",
      "  exit \\${EXIT_SUCCESS}",
      "}"
    ],
    "description": "One-echo bash help function with colors and snippet placeholders"
  }
}
