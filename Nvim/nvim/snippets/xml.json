{
  "odoo-xml-doc-header": {
    "prefix": "doch",
    "body": [
      "<!--",
      "    ${1:Filename.xml}",
      "",
      "    ${2:Short description of this XML file}",
      "",
      "    @author ${3:@ZouariOmar} <${4:zouariomar20@gmail.com}>",
      "    @version ${5:0.1}",
      "    @since ${6:YYYY-MM-DD}",
      "-->"
    ],
    "description": "File header comment for Odoo XML files"
  },
  "odoo-view": {
    "prefix": "odoo",
    "body": [
      "<odoo>",
      "</odoo>"
    ],
    "description": "Odoo <odoo> view"
  },
  "odoo-xml-record": {
    "prefix": "odoor",
    "body": [
      "<record id=\"${1:your_record_id}\" model=\"${2:your.model}\">",
      "    <field name=\"${3:field_name}\">${4:value}</field>",
      "</record>"
    ],
    "description": "Odoo XML record block"
  },
  "odoo-field-selfclosing": {
    "prefix": "odoof/",
    "body": [
      "<field name=\"${1:field_name}\" type=\"${2:type}\"/>"
    ],
    "description": "Odoo field with name and type (self-closing)"
  },
  "odoo-field-with-content": {
    "prefix": "odoof",
    "body": [
      "<field name=\"${1:field_name}\" type=\"${2:type}\">${3:content}</field>"
    ],
    "description": "Odoo field with name, type, and content"
  },
  "odoo-menuitem": {
    "prefix": "odoom/",
    "body": [
      "<menuitem id=\"${1:menu_id}\" name=\"${2:Menu Name}\" parent=\"${3:parent_menu_id}\" action=\"${4:action_id}\"/>"
    ],
    "description": "Odoo menuitem tag"
  },
  "odoo-record-empty": {
    "prefix": "odoor/",
    "body": [
      "<record id=\"${1:record_id}\" model=\"${2:model.name}\"/>"
    ],
    "description": "Empty Odoo record element"
  },
  "odoo-list-view": {
    "prefix": "odool",
    "body": [
      "<list>",
      "</list>"
    ],
    "description": "Odoo <list> view"
  },
  "odoo-act-window": {
    "prefix": "odoor=ir.actions.act_window",
    "body": [
      "<record id=\"${1:action_id}\" model=\"ir.actions.act_window\">",
      "    <field name=\"name\">${2:Action Name}</field>",
      "    <field name=\"res_model\">${3:model.name}</field>",
      "    <field name=\"view_mode\">${4:tree,form}</field>",
      "    <field name=\"context\">${5:{}}</field>",
      "    <field name=\"target\">${6:current}</field>",
      "</record>"
    ],
    "description": "Odoo XML record for ir.actions.act_window"
  },
  "odoo-ui-view": {
    "prefix": "odoor=ir.ui.view",
    "body": [
      "<record id=\"${1:view_id}\" model=\"ir.ui.view\">",
      "    <field name=\"name\">${2:view.name}</field>",
      "    <field name=\"model\">${3:model.name}</field>",
      "    <field name=\"arch\" type=\"xml\">",
      "        ${4:<form string=\"${5:Form Name}\">\n            <!-- fields go here -->\n        </form>}",
      "    </field>",
      "</record>"
    ],
    "description": "Odoo XML record for ir.ui.view"
  }
}
